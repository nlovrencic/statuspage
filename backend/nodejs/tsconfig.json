{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "target": "es2017",
      "composite": true,
      "alwaysStrict": true,
      "diagnostics": true,
      "moduleResolution": "node",
      "declaration": true,
      "incremental": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "inlineSourceMap": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "outDir": "./build",
      "lib": [
        "es2017",
        "dom"
      ]
    },
    "baseUrl": ".",
    "include": [
      "./src/**/*",
      "./test/**/*",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  